<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:background="#ffffff"
        android:orientation="vertical"
        android:id="@+id/layout_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scr_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/detail_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:textColor="#000000"
                android:textSize="12sp" />
        </ScrollView>

    </LinearLayout>


    <LinearLayout
        android:background="#fffa"
        android:layout_gravity="end"
        android:id="@+id/right_draw"
        android:orientation="vertical"
        android:layout_width="100dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bt_add"
                android:textColor="#000000"
                android:text="+"
                android:background="@drawable/bt_shape_style"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <Button
                android:id="@+id/bt_sub"
                android:textColor="#000000"
                android:text="-"
                android:background="@drawable/bt_shape_style"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_red"
                android:background="@drawable/bt_shape_red_style"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <Button
                android:id="@+id/bt_black"
                android:background="@drawable/bt_shape_black_style"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

        </LinearLayout>

    </LinearLayout>



</androidx.drawerlayout.widget.DrawerLayout>