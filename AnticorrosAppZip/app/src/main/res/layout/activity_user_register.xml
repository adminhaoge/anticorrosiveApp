<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/root_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:background="@color/top_bg_color"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title_tv"
            android:text="注册"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/corner_login_bg"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/ed_re_phone"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/login_user_name_icon"
            android:hint="手机号"
            android:background="@null"
            android:inputType="phone"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_gravity="center"
            android:id="@+id/ed_re_corner"
            android:background="@drawable/corner_login_bg"
            android:padding="20dp"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:hint="验证码"
            android:textSize="12sp"
            android:layout_height="wrap_content"/>

        <com.play.anticorrosiveapp.custom.VerificationCodeButton
            android:id="@+id/bt_ver"
            android:padding="20dp"
            android:text="发送验证码"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/corners_login_nomral"
            app:timing_background="@drawable/corners_login_begin_nomral"
            app:timing_textColor="@color/white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/corner_login_bg"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/ed_re_password"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/login_user_name_icon"
            android:hint="密码"
            android:background="@null"
            android:inputType="numberPassword"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/check_password_cb"
            android:layout_width="wrap_content"
            android:button="@drawable/check_user_password_selector"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/user_register_bt"
        android:layout_width="match_parent"
        android:text="注 册"
        android:background="@drawable/corners_login_bg"
        android:textColor="@color/white"
        android:layout_margin="15dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/user_agreement_tv"
        android:layout_width="wrap_content"
        android:text="建议"
        android:layout_marginLeft="15dp"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/consent_icon"
        android:layout_height="wrap_content" />


</LinearLayout>