<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/root_bg_color"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:padding="15dp"
        android:background="@color/top_bg_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/login_txt"
            android:text="登录"
            android:layout_centerInParent="true"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/register_txt"
            android:layout_alignBaseline="@id/login_txt"
            android:text="注册"
            android:layout_alignParentRight="true"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:padding="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/corner_login_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ed_phone"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/login_user_name_icon"
            android:hint="手机号"
            android:background="@null"
            android:inputType="phone"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/corner_login_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ed_password"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/login_user_password_icon"
            android:hint="密码"
            android:background="@null"
            android:inputType="numberPassword"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/cb_vis"
            android:button="@drawable/check_user_password_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/bt_login"
        android:text="登录"
        android:textColor="@color/white"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/corners_login_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/no_password_txt"
            android:textColor="@color/main_color"
            android:text="忘记密码？"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/quick_login_txt"
            android:layout_alignParentRight="true"
            android:textColor="@color/main_color"
            android:text="手机快捷登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</LinearLayout>